<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cityy"
    tools:context=".RiderActivity"
    android:fitsSystemWindows="true">


    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView

        android:id="@+id/driveby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="#0000"
        android:fontFamily="@font/carter_one"
        android:text="Drive By"
        android:textColor="#DB161C"
        android:textSize="55dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rider"
        android:id="@+id/riderr"
        android:layout_below="@+id/driveby"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#070707"/>

    <ImageView
        android:id="@+id/ridericon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/riderr"
        android:layout_centerHorizontal="true"
        android:src="@drawable/customer"/>

    <RelativeLayout
        android:id="@+id/relay3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ridericon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        >

        <EditText
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColorHint="#4D4B4B"
            android:id="@+id/name"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_bg"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:drawablePadding="5dp"
            />

        <EditText
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/name"
            android:textColor="#000"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_bg"
            android:hint="Email"
            android:textColorHint="#4D4B4B"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:drawablePadding="5dp"

            />

        <EditText
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:inputType="phone"
            android:layout_below="@+id/email"
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_bg"
            android:layout_marginBottom="10dp"
            android:hint="Phone Number"
            android:textColorHint="#4D4B4B"
            android:drawableStart="@drawable/ic_local_phone_black_24dp"
            android:drawablePadding="5dp"
            />

        <EditText
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:layout_below="@+id/number"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:textColor="#000"
            android:background="@drawable/text_bg"
            android:hint="Password"
            android:textColorHint="#4D4B4B"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:drawablePadding="5dp"

            />

        <EditText
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:layout_below="@+id/password"
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#000"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_bg"
            android:hint="Confirm Password"
            android:textColorHint="#4D4B4B"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:drawablePadding="5dp"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_bg"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="Signup"
            android:id="@+id/signupRider"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16sp" />





    </RelativeLayout>









</RelativeLayout>


    </RelativeLayout>