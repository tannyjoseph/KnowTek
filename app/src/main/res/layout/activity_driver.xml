<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/drive"
    tools:context=".DriverActivity">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/driveby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:background="#0000"
            android:fontFamily="@font/carter_one"
            android:text="Drive By"
            android:textColor="#DB161C"
            android:textSize="50dp"
            android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver"
        android:id="@+id/driverr"
        android:layout_below="@+id/driveby"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#070707"/>

    <ImageView
        android:id="@+id/drivericon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driverr"
        android:layout_centerHorizontal="true"
        android:src="@drawable/driverr"/>

    <RelativeLayout
        android:id="@+id/relay3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drivericon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        >

        <EditText
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColorHint="#4D4B4B"
            android:id="@+id/name"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/text_bg"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:drawablePadding="5dp"
            />

        <EditText
            android:layout_marginBottom="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:layout_below="@+id/name"
            android:inputType="textEmailAddress"
            android:textColor="#000"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_bg"
            android:hint="Email"
            android:textColorHint="#4D4B4B"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:drawablePadding="5dp"

            />

        <EditText
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:inputType="phone"
            android:layout_below="@+id/email"
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_bg"
            android:layout_marginBottom="5dp"
            android:hint="Phone Number"
            android:textColorHint="#4D4B4B"
            android:drawableStart="@drawable/ic_local_phone_black_24dp"
            android:drawablePadding="5dp"
            />

        <EditText
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:layout_below="@+id/number"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:inputType="textPassword"
            android:textColor="#000"
            android:background="@drawable/text_bg"
            android:hint="Password"
            android:textColorHint="#4D4B4B"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:drawablePadding="5dp"

            />

        <EditText
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:layout_below="@+id/password"
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#000"
            android:inputType="textPassword"
            android:background="@drawable/text_bg"
            android:hint="Confirm Password"
            android:textColorHint="#4D4B4B"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:drawablePadding="5dp"

            />




    </RelativeLayout>

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/relay4"
            android:layout_height="wrap_content"
            android:layout_below="@id/relay3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driving License(Front): "
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textColor="#ffff"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cloud_upload_black_24dp"
                android:layout_alignParentRight="true"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relay4"
            android:id="@+id/relay5"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="0dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driving License(Back): "
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textColor="#ffff"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_cloud_upload_black_24dp"
                />

        </RelativeLayout>


        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relay5"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bg"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Signup"
        android:id="@+id/signupDriver"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="16sp" />




    </RelativeLayout>



</RelativeLayout>